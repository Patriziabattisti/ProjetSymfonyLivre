<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ApiStory{% endblock %}</title>
        
        
        
        {% block stylesheets %}
          <link rel="stylesheet" href="{{asset('all.css')}}"/>
          <link rel="stylesheet" href="{{asset('bootstrap.min.css')}}"/>
          <link rel="stylesheet" href="{{asset('style.css')}}"/>
          <link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet">
          <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
          <link href="https://fonts.googleapis.com/css?family=Courgette" rel="stylesheet">
        
        {% endblock %}
    </head>
    <body style="height:95vh;">
        <header>
            <div class="jumbotron" style="width:100vw">
                <h1>Apistory</h1>
            </div>
             {%if app.user%}
                <a id='btnlogout' class="btn-lg" href="/logout">Logout</a>
             {%endif%}
            <a id="btnsortie" href="/"  class="btn-lg close" aria-label="Close">
                <span aria-hidden="true" style="color:black">&times;</span>
            </a>
        </header>
        {% block body %}{% endblock %}
        {% block javascripts %}
          
            <script src="{{asset('jquery-3.3.1.js')}}"></script>
            <script src="{{asset('jquery.min.js')}}"></script>
            <script src="{{asset('bootstrap.min.js')}}"></script>
        {% endblock %}
          
    </body>
</html>
